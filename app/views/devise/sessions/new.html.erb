<h4 class="login container mt-2">Log in</h4>
<div class="d-flex justify-content-center align-items-center container mt-3">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
</div>
  <div class="form-actions">
    <%= f.button :submit, "Login", class: "btn btn-primary btn-width" %>
    <p>If you are having issues logging in, please <a href=""><strong>contact us</strong> </a>here.</p>
    <%= %>
  </div>
<% end %>

</div>
