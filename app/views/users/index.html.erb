<div class="user-container">
  <div>
    <%= form_tag users_path, id: "search-bar", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search by user skills"
      %><%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="card-container">
    <% @users.each do |user| %>
      <div class="card-user">
        <%= link_to user_path(user) do %>
          <% if user.photo.present? %>
            <%= cl_image_tag user.photo.key, class: "user_card_image" %>
          <% else %>
            <%= cl_image_tag "avatar_daq4b6", class: "user_card_image" %>
          <% end %>
          <div class="card-user-infos">
            <div>
              <h2><%= user.first_name %> <%= user.last_name %></h2>
              <p>Languages known:
              <% if user.skills[0] != nil %>
                <strong><%= user.skills[0].name %></strong>
              <% end %>
            </div>
            <h2 class="user-pricing"><%= "#{user.price_per_hour}Â£" %></h2>
          <!-- <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-user-avatar avatar-bordered" /> -->
          </div>
        <% end %>
      </div>
    <% end %>      
  </div>
</div>
