<h1>My Profile</h1>
<a href="#" class='btn btn-outline-primary'>Make profile visible</a>
<h3>Bookings</h3>
<% @bookings.each do |booking| %>
<p>
  <%= booking.title  %> <%= link_to 'Cancel booking', booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to delete this booking?" }, class: 'btn btn-outline-danger' %>

</p>
<ul>
  <li>
    <%= booking.description  %>
  </li>
  <li>
    <%= booking.start_time  %>
  </li>
  <li>
    <%= booking.end_time  %>
  </li>
  <li>Total cost: <%= User.find(booking.booked_user_id).price_per_hour * (booking.end_time.hour - booking.start_time.hour) %>Â£</li>
</ul>
<% end %>
